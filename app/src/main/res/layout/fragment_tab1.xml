<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".ui.fragment.Tab1Fragment">

    <LinearLayout
        android:id="@+id/v_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:orientation="horizontal"
        android:padding="1px">

        <com.flyjingfish.gradienttextviewlib.GradientTextView
            android:id="@+id/but1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:padding="10dp"
            android:tag="26"
            android:text="全开"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:gradient_angle="1"
            app:gradient_endColor="@color/purple_200"
            app:gradient_startColor="@color/white"
            tools:ignore="MissingClass" />

        <TextView
            android:id="@+id/tv_code1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_code2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.flyjingfish.gradienttextviewlib.GradientTextView
            android:id="@+id/but2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:padding="10dp"
            android:tag="27"
            android:text="全关"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:gradient_angle="1"
            app:gradient_endColor="@color/white"
            app:gradient_startColor="@color/purple_200"
            tools:ignore="MissingClass" />

        <com.flyjingfish.gradienttextviewlib.GradientTextView
            android:id="@+id/but3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_popup_gradation_border"
            android:gravity="center"
            android:padding="10dp"
            android:text="画中画"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:gradient_angle="1"
            app:gradient_endColor="@color/white"
            app:gradient_startColor="@color/purple_200"
            tools:ignore="MissingClass" />

        <com.flyjingfish.gradienttextviewlib.GradientTextView
            android:id="@+id/but4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_popup_gradation_border"
            android:gravity="center"
            android:padding="10dp"
            android:text="音源控制"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:gradient_angle="1"
            app:gradient_endColor="@color/white"
            app:gradient_startColor="@color/purple_200"
            tools:ignore="MissingClass" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/v_top"
        android:layout_alignParentBottom="true" />
</RelativeLayout>