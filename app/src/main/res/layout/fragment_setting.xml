        android:textColor="@drawable/common_text_select_color_selector"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/but2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:gravity="center"
