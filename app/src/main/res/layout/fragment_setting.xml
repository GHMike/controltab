<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ui.fragment.Tab1Fragment">

    <LinearLayout
        android:id="@+id/v_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/but1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_w_border">

            <com.flyjingfish.gradienttextviewlib.GradientTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/ic_launcher_round"
                android:gravity="center"
                android:padding="10dp"
                android:text="亮度"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:gradient_angle="1"
                app:gradient_endColor="@color/white"
                app:gradient_startColor="@color/teal_200"
                tools:ignore="MissingClass" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/but2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_w_border">

            <com.flyjingfish.gradienttextviewlib.GradientTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_launcher_round"
                android:gravity="center"
                android:padding="10dp"
                android:text="WIFI"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:gradient_angle="1"
                app:gradient_endColor="@color/white"
                app:gradient_startColor="@color/teal_200"
                tools:ignore="MissingClass" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/but3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_w_border">

            <com.flyjingfish.gradienttextviewlib.GradientTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_launcher_round"
                android:gravity="center"
                android:padding="10dp"
                android:text="高级设置"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:gradient_angle="1"
                app:gradient_endColor="@color/white"
                app:gradient_startColor="@color/teal_200"
                tools:ignore="MissingClass" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/but4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_w_border">

            <com.flyjingfish.gradienttextviewlib.GradientTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_launcher_round"
                android:gravity="center"
                android:padding="10dp"
                android:text="系统更新"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:gradient_angle="1"
                app:gradient_endColor="@color/white"
                app:gradient_startColor="@color/teal_200"
                tools:ignore="MissingClass" />
        </LinearLayout>



    </LinearLayout>



    <RelativeLayout
        android:id="@+id/v_pass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone">

        <EditText
            android:id="@+id/edit_pass"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/ps_color_grey" />

        <Button
            android:id="@+id/but_com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_pass"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="确认"
            android:textColor="@drawable/common_text_select_color_selector" />


    </RelativeLayout>

    <TextView
        android:id="@+id/ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textSize="10sp" />
</RelativeLayout>