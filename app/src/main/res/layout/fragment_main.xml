<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".ui.fragment.Tab1Fragment">

    <LinearLayout
        android:id="@+id/v_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.flyjingfish.gradienttextviewlib.GradientTextView
            android:id="@+id/but1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:padding="10dp"
            android:tag="26"
            android:text="全开"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:gradient_angle="1"
            app:gradient_endColor="@color/purple_200"
            app:gradient_startColor="@color/white"
            tools:ignore="MissingClass" />

        <TextView
            android:id="@+id/tv_code1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_code2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.flyjingfish.gradienttextviewlib.GradientTextView
            android:id="@+id/but2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:padding="10dp"
            android:tag="27"
            android:text="全关"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:gradient_angle="1"
            app:gradient_endColor="@color/white"
            app:gradient_startColor="@color/purple_200"
            tools:ignore="MissingClass" />

        <com.flyjingfish.gradienttextviewlib.GradientTextView
            android:id="@+id/but3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_popup_gradation_border"
            android:gravity="center"
            android:padding="10dp"
            android:text="画中画"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:gradient_angle="1"
            app:gradient_endColor="@color/white"
            app:gradient_startColor="@color/purple_200"
            tools:ignore="MissingClass" />

        <com.flyjingfish.gradienttextviewlib.GradientTextView
            android:id="@+id/but4"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_popup_gradation_border"
            android:gravity="center"
            android:padding="10dp"
            android:text="音源控制"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:gradient_angle="1"
            app:gradient_endColor="@color/white"
            app:gradient_startColor="@color/purple_200"
            tools:ignore="MissingClass" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/main_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/v_top"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/but_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_gradation_border2"
            android:tag="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground">


                <ImageView
                    android:id="@+id/iv_img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/tv_name1"
                    android:src="@mipmap/ic_launcher_round" />


                <com.flyjingfish.gradienttextviewlib.GradientTextView
                    android:id="@+id/tv_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="10dp"
                    android:text="K歌"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:gradient_angle="1"
                    app:gradient_endColor="@color/white"
                    app:gradient_startColor="@color/teal_200"
                    tools:ignore="MissingClass" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/but_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_gradation_border2"
            android:tag="5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground">


                <ImageView
                    android:id="@+id/iv_img2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/tv_name2"
                    android:src="@mipmap/ic_launcher_round" />


                <com.flyjingfish.gradienttextviewlib.GradientTextView
                    android:id="@+id/tv_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="10dp"
                    android:text="K歌"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:gradient_angle="1"
                    app:gradient_endColor="@color/white"
                    app:gradient_startColor="@color/teal_200"
                    tools:ignore="MissingClass" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/but_v1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/but_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_gradation_border2"
                android:tag="6">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground">


                    <ImageView
                        android:id="@+id/iv_img3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/tv_name3"
                        android:src="@mipmap/ic_launcher_round" />


                    <com.flyjingfish.gradienttextviewlib.GradientTextView
                        android:id="@+id/tv_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:paddingBottom="10dp"
                        android:text="K歌"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:gradient_angle="1"
                        app:gradient_endColor="@color/white"
                        app:gradient_startColor="@color/teal_200"
                        tools:ignore="MissingClass" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/but_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_gradation_border2"
                android:tag="8">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground">


                    <ImageView
                        android:id="@+id/iv_img4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/tv_name4"
